{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Run Extension",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceRoot}"
			],
			"stopOnEntry": false
		},
		{
			"name": "Run Server",
			"type": "mono",
			"request": "launch",
			"program": "${workspaceRoot}/bin/Debug/monoDebug.exe",
			"args": [ "--server=4711" ]
		},
		{
			"name": "Run Tests",
			"type": "node",
			"request": "launch",
			//"preLaunchTask": "build",
			"cwd": "${workspaceRoot}",
			"program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
			"args": [
				"-u", "tdd",
				"--timeout", "999999",
				"--colors",
				"./tests/out"
			],
			"runtimeArgs": [
				"--nolazy"
			],
			"sourceMaps": true,
			"outDir": "${workspaceRoot}/tests/out"
		}
	]
}